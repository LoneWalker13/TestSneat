<script>
    $("#submit").click(function () {
        var formValid = $('#lessonSessionsForm').valid();

        if (!formValid) return;
        // initToastr();
        showLoading();
        editRecord();
    });

    function editRecord() {
        var formData = new FormData($('#lessonSessionsForm')[0]);

        $.ajax({
            url: "/LessonSessions/DeleteLessonSessions",
            type: "POST",
            contentType: false,
            processData: false,
            data: formData,
            dataType: "json",
            success: function (data) {
                hideLoading();
                if (data.result.succeeded == true) {
                    toastr["success"]("The action has been completed successfully", "Success");
                    globalTableData.api().ajax.reload();
                    $('#lessonSessionsModal').modal('hide');
                } else {
                    toastr["error"](data.message, "Error");
                }
            },
            error: function (e) {
                hideLoading();
                $('#lessonSessionsModal').modal('hide');
                toastr["error"](e, "Error");
            }
        });
    }

    var showLoading = function () {
        $(".loading").show();
    }

    var hideLoading = function () {
        $(".loading").hide();
    }
</script>
