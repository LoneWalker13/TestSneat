                    <label for="html5-datetime-local-input" class="col-4 col-form-label">@Localizer.GetString("SessionDate")</label>
                    <div class="col-8">
                        <input class="form-control" type="datetime-local" id="datetimeInputAddLessonSessions" asp-for="SessionDate" />
                    </div>
                </div>
                <div class="row g-6">
                    <label class="col-form-label col-4">@Localizer.GetString("Status")</label>
                    <div class="col-8 mb-0 col-form-label">
                        <input type="radio" asp-for="Status" value="@LessonSessionsStatus.Active" /> @Localizer.GetString("Active")
                        <input type="radio" asp-for="Status" value="@LessonSessionsStatus.Inactive" /> @Localizer.GetString("Inactive")
                    </div>
                </div> *@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <button id="submit" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
