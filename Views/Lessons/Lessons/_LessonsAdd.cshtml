@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer


@model BusinessCourse_Application.Services.Lessons.Command.AddLessonCommand

<form id="lessonForm" enctype="multipart/form-data">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">@Localizer.GetString("AddLesson")</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-6">
                    <div class="col mb-0">
                        <label for="emailBasic" class="form-label">@Localizer.GetString("Name")</label>
                        <input type="text" id="lessonName" class="form-control" asp-for="Name">
                    </div>
                    <div class="col mb-0">
                        <label for="dobBasic" class="form-label">@Localizer.GetString("Price")</label>
                        <input type="number" step="0.01" min="0" id="lessonPrice" class="form-control" asp-for="Price">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <button id="submit" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</form>

<script>
    $("#submit").click(function () {
        var formValid = $('#lessonForm').valid();

        if (!formValid) return;
        // initToastr();
        showLoading();
        addRecord();
    });

    function addRecord() {
        var formData = new FormData($('#lessonForm')[0]);

        $.ajax({
            url: "/Lessons/AddLessons",
            type: "POST",
            contentType: false,
            processData: false,
            data: formData,
            dataType: "json",
            success: function (data) {
                hideLoading();
                if (data.result.succeeded == true) {
                    toastr["success"]("The action has been completed successfully", "Success");
                    globalTableData.api().ajax.reload();
                    $('#lessonsModal').modal('hide');
                } else {
                    toastr["error"](data.message, "Error");
                }
            },
            error: function (e) {
                hideLoading();
                $('#lessonsModal').modal('hide');
                toastr["error"](e, "Error");
            }
        });
    }

    var showLoading = function () {
        $(".loading").show();
    }

    var hideLoading = function () {
        $(".loading").hide();
    }
</script>
